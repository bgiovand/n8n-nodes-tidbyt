{
    "name": "n8n-nodes-tidbyt",
    "version": "0.3.1",
    "description": "n8n node for interacting with your Tidbyt devices and Pixlet-based applications",
    "license": "MIT",
    "homepage": "https://github.com/drudge/n8n-nodes-tidbyt",
    "author": {
        "name": "Nicholas Penree",
        "email": "nick@penree.com"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/drudge/n8n-nodes-tidbyt.git"
    },
    "main": "index.js",
    "scripts": {
        "dev": "npm run watch",
        "build": "tsc && gulp",
        "lint": "eslint",
        "lintfix": "tslint --fix -p tsconfig.json -c tslint.json",
        "nodelinter": "nodelinter",
        "watch": "tsc --watch",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "n8n",
        "node",
        "tidbyt",
        "pixlet",
        "iot",
        "n8n-node",
        "n8n-community-node-package"
    ],
    "n8n": {
        "credentials": [
            "dist/credentials/Tidbyt.credentials.js"
        ],
        "nodes": [
            "dist/nodes/Tidbyt/Tidbyt.node.js"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "@types/request-promise-native": "~1.0.21",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.2.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "gulp": "^4.0.2",
        "jest": "^29.7.0",
        "n8n": "^0.174.0",
        "n8n-workflow": "~0.83.0",
        "nodelinter": "^0.1.19",
        "ts-jest": "^29.1.2",
        "typescript": "~5.3.3"
    },
    "dependencies": {
        "n8n-core": "~0.101.0",
        "node-webpmux": "^3.2.0",
        "tidbyt": "^1.1.3"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testEnvironmentOptions": {
            "url": "http://localhost/"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
